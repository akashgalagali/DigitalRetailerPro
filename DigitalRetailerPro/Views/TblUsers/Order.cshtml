@model DigitalRetailerPro.Models.TblLaptop

@{
    ViewData["Title"] = "Order";
}


<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DigitalRetailerPro</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-action="GetAvailableLaptop">Available laptops</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-action="purchasedlaptop">purchased laptop</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-action="Edit" asp-route-id="@ViewBag.id">Edit Profile</a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-action="logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h1>Order</h1>

<h4>TblLaptop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Order">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" readonly />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Configuration" class="control-label"></label>
                <input asp-for="Configuration" class="form-control" readonly />
                <span asp-validation-for="Configuration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMode" class="control-label"></label>
                <select asp-for="PaymentMode" class="form-control">
                    <option class="form-control" value="cash">Cash</option>
                    <option class="form-control" value="credit card">Credit card</option>
                    <option class="form-control" value="Debit card">Debit card</option>
                    <option class="form-control" value="upi">Upi</option>
                </select>
                <span asp-validation-for="PaymentMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" readonly />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="SidId" class="form-control" readonly type="hidden" />
                <span asp-validation-for="SidId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Order now " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAvailableLaptop">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
